[user]
	name = James Vaughan
  username = jamesbvaughan
	email = james@jamesbvaughan.com
	signingkey = ssh-rsa 

[core]
	editor = nvim

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false

[fetch]
  prune = true

[commit]
  gpgsign = true

[gpg]
	format = ssh

[diff]
  # https://link.springer.com/article/10.1007/s10664-019-09772-z#Sec31
  algorithm = histogram
  tool = vimdiff

[diff "lockb"]
	textconv = bun
	binary = true

; TODO: Re-enable this conditionally
; https://git-scm.com/docs/git-config#_conditional_includes
; Maybe exclude the actions folder?
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[advice]
	detachedHead = false
