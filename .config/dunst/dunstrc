[global]
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    markup = yes
    format = "<b>%s</b>\n%b"
    follow = mouse

    font = Noto 20
    frame_width = 6
    frame_color = "#93a1a1"
    alignment = left
    word_wrap = no
    ignore_newline = no
    show_indicators = no
    line_height = 0
    padding = 8
    horizontal_padding = 8

    # The geometry of the window:
    #   [{width(pixels}]x{height(# of notifications)}[+/-{x}+/-{y}]
    # Omitted width fills the whole screen width, 0 expands to longest message.
    geometry = "600x5-10-10"
    shrink = no

[urgency_low]
    background = "#586e75"
    foreground = "#eee8d5"
    timeout = 30

[urgency_normal]
    background = "#073642"
    foreground = "#eee8d5"
    timeout = 5

[urgency_critical]
    background = "#dc322f"
    foreground = "#eee8d5"
    timeout = 0

# vim: ft=cfg
