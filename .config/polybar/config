[colors]
background = ${xrdb:color8:#222}
foreground = ${xrdb:color7:#ddd}
foreground-alt = ${xrdb:color10:#aaa}
red = ${xrdb:color1:#f00}
green = ${xrdb:color2:#0f0}
yellow = ${xrdb:color3:#ffa}
blue = ${xrdb:color4:#00f}
magenta = ${xrdb:color5:#faa}
cyan = ${xrdb:color6:#aaf}
orange= ${xrdb:color9:#ffa}
violet = ${xrdb:color13:#faf}

[bar/jamesbar]
monitor = ${env:MONITOR:eDP-1}
height = 40
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 8
line-color = #f00

padding-left = 1
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = Noto:size=18
font-1 = Noto Emoji:size=15

modules-left = ewmh xwindow
modules-center = date
modules-right = mpd backlight battery

tray-position = right
tray-maxsize = 200
tray-padding = 4
tray-detached = false

[module/ewmh]
type = internal/xworkspaces
format = <label-state>
pin-workspaces = false
label-active-foreground = ${colors.foreground}
label-active-underline = ${colors.violet}
label-empty-foreground = ${colors.foreground-alt}
label-empty-underline = ${colors.violet}
label-active = " %name% "
label-empty = " %name% "

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-underline = ${colors.yellow}

[module/date]
type = internal/date
interval = 5
time = %H:%M
time-alt = %H:%M:%S
format-underline = ${colors.blue}
label = %time%

[module/mpd]
type = internal/mpd
format-online = <label-song>
label-song = ♫ %artist% - %title%
label-song-underline = ${colors.cyan}
label-song-maxlen = 40
label-song-ellipsis = true

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <bar>
bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.violet}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}

[module/volume]
type = internal/volume
master-mixer = "UMC2014HD 192k Output"
format-volume = <bar-volume>
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.magenta}
format-muted-foreground = ${colors.foreground-alt}
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.green}
bar-volume-foreground-6 = ${colors.green}
bar-volume-foreground-7 = ${colors.yellow}
bar-volume-foreground-8 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <label-charging>
format-discharging = <label-discharging>
format-charging-underline = ${colors.orange}
format-full-underline = ${self.format-charging-underline}
format-discharging-underline = ${self.format-charging-underline}

[settings]
screenchange-reload = true

